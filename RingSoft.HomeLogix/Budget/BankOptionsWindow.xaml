<dec:BaseWindow x:Class="RingSoft.HomeLogix.Budget.BankOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF"
        xmlns:lc="clr-namespace:RingSoft.DbLookup.Controls.WPF;assembly=RingSoft.DbLookup.Controls.WPF"
        xmlns:vm="clr-namespace:RingSoft.HomeLogix.Library.ViewModels.Budget;assembly=RingSoft.HomeLogix.Library"
        xmlns:da="clr-namespace:RingSoft.HomeLogix.DataAccess.Model;assembly=RingSoft.HomeLogix.DataAccess"
        mc:Ignorable="d"
        Title="BankOptionsWindow" SizeToContent="WidthAndHeight">

    <Window.DataContext>
        <vm:BankOptionsViewModel x:Name="LocalViewModel"/>
    </Window.DataContext>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Account Statement Day"/>

        <dec:IntegerEditControl Grid.Row="0" Grid.Column="1" MinimumValue="1" MaximumValue="31" HorizontalAlignment="Left" Width="50" Value="{Binding StatementDayOfMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Annual Percent Rate"/>

        <dec:DecimalEditControl Grid.Row="1" Grid.Column="1" FormatType="Percent" HorizontalAlignment="Left" Width="100" TextAlignment="Left" Value="{Binding BankAccountIntrestRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Grid.Column="0" x:Name="InterestLabel" Content="Interest Payment Budget Item"/>

        <lc:AutoFillControl Grid.Row="2" Grid.Column="1" x:Name="InterestPaymentBudgetItemControl" DesignText="Interest Income (...0123)" Width="200" HorizontalAlignment="Left" Setup="{Binding InterestBudgetAutoFillSetup}" Value="{Binding InterestBudgetAutoFillValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" UiCommand="{Binding InterestUiCommand}" UiLabel="{Binding ElementName=InterestLabel}"/>

        <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="CCOptionsGroup" Header="Credit Card Options">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Row="0" Grid.Column="0" Content="Carry Balance" HorizontalAlignment="Left" IsChecked="{Binding Path=CreditCardOption, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static da:BankCreditCardOptions.CarryBalance}, Mode=TwoWay}"/>

                <RadioButton Grid.Row="1" Grid.Column="0" Content="Pay Statement Balance Off Each Month" HorizontalAlignment="Left" IsChecked="{Binding Path=CreditCardOption, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static da:BankCreditCardOptions.PayOffEachMonth}, Mode=TwoWay}"/>

                <Label Grid.Row="2" Grid.Column="0" x:Name="CCPaymentBudgetLabel" Content="Credit Card Payment Budget Item"/>

                <lc:AutoFillControl Grid.Row="2" Grid.Column="1" Width="200" Setup="{Binding CCPaymentBudgetAutoFillSetup}" Value="{Binding CCPaymentBudgetAutoFillValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" UiCommand="{Binding PayCCBudgetUiCommand}" UiLabel="{Binding ElementName= CCPaymentBudgetLabel}"/>

                <Label Grid.Row="3" Grid.Column="0" x:Name="PayCCDayLabel" Content="Credit Card Payment Day"/>

                <dec:IntegerEditControl Grid.Row="3" Grid.Column="1" Width="50" HorizontalAlignment="Left" Value="{Binding PayCCBalanceDay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" UiCommand="{Binding PayCCDayUiCommand}" UiLabel="{Binding ElementName=PayCCDayLabel}" MinimumValue="1" MaximumValue="31"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,5" >

            <Button Content="_OK" Width="50" Command="{Binding OkCommand}" IsDefault="True"/>

            <Button Content="_Cancel" Margin="5,0,0,0" Width="50" Command="{Binding CancelCommand}" IsCancel="True"/>

        </StackPanel>
    </Grid>

</dec:BaseWindow>
