<ac:AppMainWindow x:Class="RingSoft.HomeLogix.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF"
                  xmlns:lc="clr-namespace:RingSoft.DbLookup.Controls.WPF;assembly=RingSoft.DbLookup.Controls.WPF"
                  xmlns:ac="clr-namespace:RingSoft.App.Controls;assembly=RingSoft.App.Controls"
                  xmlns:vm="clr-namespace:RingSoft.HomeLogix.Library.ViewModels.Main;assembly=RingSoft.HomeLogix.Library"
                  xmlns:local="clr-namespace:RingSoft.HomeLogix"
                  mc:Ignorable="d"
                  Style="{StaticResource BaseWindowStyle}"
                  CloseOnEscape="False"
                  Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="dec:DecimalReadOnlyBox" BasedOn="{StaticResource {x:Type dec:DecimalReadOnlyBox}}">
            <Setter Property="DesignText" Value="$123,456,789.00"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FormatType" Value="Currency"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <ac:DbMaintenanceButton ImageSource="{StaticResource LeftImage}" Command="{Binding PreviousMonthCommand}"/>

            <TextBlock Text="{Binding CurrentMonthEndingText}" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

            <ac:DbMaintenanceButton ImageSource="{StaticResource RightImage}" Command="{Binding NextMonthCommand}"/>

        </StackPanel>

        <lc:LookupControl Grid.Row="1" x:Name="BudgetLookupControl" LookupDefinition="{Binding BudgetLookupDefinition}" Command="{Binding BudgetLookupCommand}" HorizontalAlignment="Center" Width="650">

            <lc:LookupControl.LookupColumns>

                <lc:LookupColumn PropertyName="{lc:NameOf Description, Type={x:Type vm:MainBudgetLookup}}" Header="Budget Item" DesignText="A Very Large Budget Item" Width="250"/>

                <lc:LookupColumn PropertyName="{lc:NameOf ItemType, Type={x:Type vm:MainBudgetLookup}}" Header="Item Type" DesignText="Expense xxx" Width="90"/>

                <lc:LookupColumn PropertyName="{lc:NameOf MonthlyAmount, Type={x:Type vm:MainBudgetLookup}}" Header="Monthly Amount" TextAlignment="Right" DesignText="$123,456.78" Width="120"/>

                <lc:LookupColumn PropertyName="{lc:NameOf MonthToDateAmount, Type={x:Type vm:MainBudgetLookup}}" Header="Month To Date" TextAlignment="Right" DesignText="$123,456.78" Width="120"/>

            </lc:LookupControl.LookupColumns>
        </lc:LookupControl>

        <GroupBox Grid.Row="2" Header="Monthly Totals" HorizontalAlignment="Center">

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Budget Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="1" Value="{Binding Path=TotalBudgetMonthlyIncome}"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Budget Expenses"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="3" Value="{Binding Path=TotalBudgetMonthlyExpenses}"/>

                <Label Grid.Row="0" Grid.Column="4" Content="Budget Net Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="5" Value="{Binding Path=TotalBudgetMonthlyNetIncome}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Actual Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="1" Grid.Column="1" Value="{Binding Path=TotalActualMonthlyIncome}"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Actual Expenses"/>

                <dec:DecimalReadOnlyBox Grid.Row="1" Grid.Column="3" Value="{Binding Path=TotalActualMonthlyExpenses}"/>

                <Label Grid.Row="1" Grid.Column="4" Content="Actual Net Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="1" Grid.Column="5" Value="{Binding Path=TotalActualMonthlyNetIncome}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Income Difference"/>

                <dec:DecimalReadOnlyBox Grid.Row="2" Grid.Column="1" Value="{Binding Path=TotalMonthlyIncomeDifference}"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Expenses Difference"/>

                <dec:DecimalReadOnlyBox Grid.Row="2" Grid.Column="3" Value="{Binding Path=TotalMonthlyExpensesDifference}"/>

                <Label Grid.Row="2" Grid.Column="4" Content="Net Income Difference"/>

                <dec:DecimalReadOnlyBox Grid.Row="2" Grid.Column="5" Value="{Binding Path=TotalMonthlyNetIncomeDifference}"/>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Yearly Totals" HorizontalAlignment="Center">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Actual Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="1" Value="{Binding Path=YearToDateIncome}"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Actual Expenses"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="3" Value="{Binding Path=YearToDateExpenses}"/>

                <Label Grid.Row="0" Grid.Column="4" Content="Actual Net Income"/>

                <dec:DecimalReadOnlyBox Grid.Row="0" Grid.Column="5" Value="{Binding Path=YearToDateNetIncome}"/>

            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button Command="{Binding ChangeHouseholdCommand}" Content="_Change Household" Height="20" Width="100"/>
            <Button Command="{Binding ManageBudgetCommand}" Content="_Manage Budget" Height="20" Width="100"/>
            <Button Command="{Binding ManageBankAccountsCommand}" Content="Manage _Bank Accounts" Height="20"/>
        </StackPanel>
    </Grid>
</ac:AppMainWindow>