<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels;assembly=Mobile"
             x:Class="Mobile.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:MainViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Spacing="20">
    
            <Button Text="Sync Computer" Command="{Binding SyncCommand}"/>

            <Button Text="View Current Budget" Command="{Binding ShowCurrentBudgetsCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>