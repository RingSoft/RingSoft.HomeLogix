<!-- ReSharper disable once Xaml.RedundantNamespaceAlias -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/RingSoft.App.Controls;component/Themes/ControlStylesResourceDictionary.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/RingSoft.App.Controls;component/Themes/DbMaintenanceTopHeaderTemplate.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/RingSoft.App.Controls;component/Themes/AdvancedFindAdditionalButtonsTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <dec:ComparisonConverter x:Key="ComparisonConverter"/>

    <Style TargetType="ComboBox" x:Key="DatabaseComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="Height" Value="23" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="IsEditable" Value="True" />
    </Style>

</ResourceDictionary>